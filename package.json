{
  "name": "object-validator",
  "version": "0.0.1",
  "description": "Object Validator with Typescript support",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "types": "dist/defs/index.d.ts",
  "directories": {
    "dist": "dist"
  },
  "scripts": {
    "build": "npm run build:es2015; npm run build:cmjs",
    "build:es2015":
      "tsc -P ./tsconfig-build.json --outDir 'dist/es' --target es2015 --module es2015",
    "build:cmjs": "tsc -P ./tsconfig-build.json",
    "clean": "rm -rf dist coverage .nyc_output",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "test": "nyc mocha --timeout 5000 --recursive test/**/*.spec.ts",
    "test:watch":
      "mocha --require ts-node/register --watch-extensions ts --reporter spec --watch test/**/*.spec.ts",
    "codecov": "codecov -f coverage/coverage-final.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jomik/object-validator.git"
  },
  "keywords": ["typescript", "validate", "validator", "validation"],
  "author": "Jonas Damtoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jomik/object-validator/issues"
  },
  "homepage": "https://github.com/Jomik/object-validator#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.47",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "source-map-support": "^0.5.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "prettier": {
    "arrowParens": "always"
  },
  "nyc": {
    "extension": [".ts"],
    "require": ["ts-node/register", "source-map-support/register"],
    "reporter": ["json", "html", "text", "lcov"]
  },
  "dependencies": {
    "fast-deep-equal": "^1.0.0"
  }
}
